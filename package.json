{
  "name": "@dera-/namagame-creator-app-win",
  "version": "1.0.0",
  "description": "Nicolive game generator",
  "main": "script/main.js",
  "targets": {
    "main": false
  },
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p ./ && node tools/copy-assets.js",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "dera-/namagame-creator-app-win.git"
  },
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.26.2",
  "dependencies": {
    "@akashic/akashic-cli-commons": "~1.0.3",
    "@akashic/akashic-cli-export": "~2.0.12",
    "@akashic/akashic-cli-sandbox": "^2.0.7",
    "adm-zip": "^0.5.16",
    "electron-updater": "^6.1.7",
    "openai": "^6.15.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^25.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.namagame.creator",
    "productName": "Namagame Creator",
    "executableName": "namagame-creator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "script/**",
      "package.json",
      "node_modules/**"
    ],
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "dera-",
        "repo": "namagame-creator-app-win"
      }
    ]
  }
}
